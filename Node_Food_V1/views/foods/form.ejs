<!DOCTYPE html>
<html lang="ko">
  <script src="js/insert.js"></script>
  <body>
    <form class="form insert" method="POST">
      <div>
        <label for="date">날짜</label>
        <input name="date" id="date" type="text" placeholder="날짜" />
      </div>
      <div>
        <label for="food">식품명</label>
        <input name="food" id="food" type="text" placeholder="식품명" />
      </div>
      <div>
        <label for="intake">섭취량</label>
        <input name="intake" id="intake" type="number" placeholder="섭취량" />
      </div>
      <div>
        <label for="cal">칼로리</label>
        <input name="cal" id="cal" type="number" placeholder="칼로리" />
      </div>
      <button type="button" class="submit">섭취정보 등록</button>
    </form>
  </body>
  <script>
    const inputDate = document.querySelector("form.insert div input");
    const today = new Date();
    const year = today.getFullYear();
    // getMonth() 는 0 부터 시작하므로 + 1 필요
    // padStart() 는 문자열에만 가능
    const month = String(today.getMonth() + 1).padStart(2, "0");
    const date = String(today.getDate()).padStart(2, "0");
    inputDate.value = `${year}-${month}-${date}`;
  </script>
</html>
